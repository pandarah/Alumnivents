//- This class enables a dropdown for a person checking in to an event
//- or hosting an event to select their major
div(class='field')
    label Major
    div(class='ui fluid search selection dropdown')
        input(type='hidden' name='major' value=`${event ? data[event.id].host.major : ''}`)
        div(class='dropdown icon')
        div(class='default text') Major
        div(class='menu')
            div(class='item' data-value='Other') Other
            each val, school in formOptions.majors
                div(class='header')
                    i(class=`icon ${val.icon}`)
                    .
                        #{school}
                each major, idx in val.list
                    div(class='item' data-value=`${major}`)= major
                if school !== Object.keys(formOptions.majors)[Object.keys(formOptions.majors).length - 1]
                    div(class='divider')